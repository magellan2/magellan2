<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<installation version="1.0">
  <info>
    <appname>Magellan</appname>
    <appversion>2.0 Build 62</appversion>
    <authors>
      <author name="Roger Butenuth" email=""/>
      <author name="Enno Rehling" email=""/>
      <author name="Stefan Götz" email=""/>
      <author name="Klaas Prause" email=""/>
      <author name="Sebastian Tusk" email=""/>
      <author name="Andreas Gampe" email=""/>
      <author name="Roland Behme" email=""/>
      <author name="Michael Schmidt" email=""/>
      <author name="Henning Zahn" email=""/>
      <author name="Oliver Hertel" email=""/>
      <author name="Günter Grossberger" email=""/>
      <author name="Sören Bendig" email=""/>
      <author name="Marc Geerligs" email=""/>
      <author name="Matthias Müller" email=""/>
      <author name="Ulrich Küster" email=""/>
      <author name="Jake Hofer" email=""/>
      <author name="Ilja Pavkovic" email=""/>
      <author name="Thoralf Rickert" email="thoralf@m84.de"/>
    </authors>
    <url>http://eressea.sourceforge.net/magellan/</url>
    <uninstaller write="yes"/>
    <javaversion>1.5</javaversion>
  </info>
  
  <guiprefs width="640" height="480" resizable="no"/>
  
  <locale>
    <langpack iso3="eng"/>
    <langpack iso3="deu"/>
  </locale>
  
  <resources>
    <res id="InfoPanel.info"   src="ReadMe.txt"/>
    <res id="useNativeLAF"     src="ReadMe.txt"/>
    <!--<res id="Installer.image" src="...."/>-->
    <res id="shortcutSpec.xml" src="install.shortcut.xml"/>
  </resources>

  <panels>
    <panel classname="HelloPanel"/>
    <panel classname="InfoPanel"/>
    <panel classname="TargetPanel"/> 
    <panel classname="PacksPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="ShortcutPanel"/>
    <panel classname="FinishPanel"/>
  </panels>

  <packs>
    <pack name="Magellan" required="yes">
      <description>This is the main application with all libraries and icons.</description>
      <file src="doc"                               targetdir="$INSTALL_PATH"/>
      <file src="etc"                               targetdir="$INSTALL_PATH"/>
      <file src="lib"                               targetdir="$INSTALL_PATH"/>
      <file src="magellan.bat"                      targetdir="$INSTALL_PATH"/>
      <file src="magellan-client.jar"               targetdir="$INSTALL_PATH"/>
      <file src="magellan-library.jar"              targetdir="$INSTALL_PATH"/>
      <file src="CHANGELOG"                         targetdir="$INSTALL_PATH"/>
      <file src="COPYING"                           targetdir="$INSTALL_PATH"/>
      <file src="LICENSE"                           targetdir="$INSTALL_PATH"/>
      <file src="UnInstall.bat"                     targetdir="$INSTALL_PATH"/>
    </pack>
    <pack name="Help" required="no" preselected="yes">
      <description>The help files</description>
      <file src="magellan-help.jar"                 targetdir="$INSTALL_PATH"/>
    </pack>
    <pack name="Additional PlugIns" required="no" preselected="yes">
      <description>Some additional plugins for Magellan</description>
      <file src="magellan-plugins.jar"              targetdir="$INSTALL_PATH"/>
    </pack>
    <pack name="Additional Skins" required="no" preselected="yes">
      <description>Some more skins</description>
      <file src="lib/skins"                         targetdir="$INSTALL_PATH"/>
    </pack>
    <pack name="ECheck" required="no" preselected="yes">
      <description>A tool for order verification</description>
      <file src="echeck"                            targetdir="$INSTALL_PATH"/>
    </pack>
  </packs>
  
  <native type="izpack" name="ShellLink.dll"/>

</installation>