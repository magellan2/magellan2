<shortcuts>
  <!-- +++++++++++++++++++++++++++++++++++++++++++ -->
  <programGroup defaultName="Magellan" location="applications"/>
  <!-- +++++++++++++++++++++++++++++++++++++++++++ -->
  <shortcut 
    name="Magellan"
    target="$INSTALL_PATH/magellan.sh"
    workingDirectory="$INSTALL_PATH"
    description="Magellan Client for Eressea etc."
    iconFile="$INSTALL_PATH/etc/images/favicon.ico"
    initialState="normal"
    programGroup="yes"
    desktop="yes" 
    applications="no" 
    startMenu="no" 
    startup="no"
    type="Application"
    encoding="UTF-8"
    terminal="no">
    <createForPack name="Magellan"/>
  </shortcut>
  <shortcut 
    name="Help for Magellan"
    target="$INSTALL_PATH/help.sh"
    workingDirectory="$INSTALL_PATH"
    description="A help for Magellan"
    initialState="noShow"
    programGroup="yes"
    desktop="no" 
    applications="no" 
    startMenu="no" 
    startup="no"
    type="Application"
    encoding="UTF-8"
    terminal="no">
    <createForPack name="Help"/>
  </shortcut>
  <shortcut 
    name="Read Me"
    target="$INSTALL_PATH/README.md"
    workingDirectory="$INSTALL_PATH"
    description="An introduction to Magellan"
    initialState="noShow"
    programGroup="yes"
    desktop="no" 
    applications="no" 
    startMenu="no" 
    startup="no">
    <createForPack name="Magellan"/>
  </shortcut>
  <shortcut 
    name="CHANGELOG"
    target="$INSTALL_PATH/CHANGELOG.txt"
    workingDirectory="$INSTALL_PATH"
    description="A complete list of changes"
    initialState="noShow"
    programGroup="yes"
    desktop="no" 
    applications="no" 
    startMenu="no" 
    startup="no">
    <createForPack name="Magellan"/>
  </shortcut>
  <shortcut 
    name="Uninstall"
    target="$INSTALL_PATH/UnInstall.sh"
    workingDirectory="$INSTALL_PATH"
    terminal="yes"
    runAsAdministrator="yes"
    description="Start this to uninstall Magellan"
    initialState="noShow"
    programGroup="yes"
    desktop="no" 
    applications="no" 
    startMenu="no" 
    startup="no"
    type="Application"
    encoding="UTF-8">
    <createForPack name="Magellan"/>
  </shortcut>
  <!-- +++++++++++++++++++++++++++++++++++++++++++ -->
</shortcuts>

